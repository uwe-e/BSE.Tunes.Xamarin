<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BSE.Tunes.XApp.Controls.Flyout">
    
    <ContentView.ControlTemplate>
        <ControlTemplate>
            
            <Grid RowSpacing="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <BoxView x:Name="PART_Fader" Grid.Row="0" Grid.RowSpan="1"
                         BackgroundColor="#A0000000">
                    <BoxView.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnFaderTapped"/>
                    </BoxView.GestureRecognizers>
                </BoxView>
                <Frame x:Name="PART_Flyout" Grid.Row="1" Grid.RowSpan="1" Padding="0">
                    <StackLayout>
                        <ContentPresenter />
                        <Button Text="Close"/>
                    </StackLayout>
                </Frame>
                
            </Grid>

        </ControlTemplate>
    </ContentView.ControlTemplate>
    
</ContentView>