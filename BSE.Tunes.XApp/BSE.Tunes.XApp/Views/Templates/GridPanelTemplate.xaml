<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BSE.Tunes.XApp.Views.Templates.GridPanelTemplate"
             xmlns:ffimageLoading="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms">
  <ContentView.Content>
        <Grid BackgroundColor="Red">
            
            <ffimageLoading:CachedImage Source="{Binding ImageSource}" Aspect="AspectFill" />

            <StackLayout BackgroundColor="#E2E2E2" TranslationY="165" Opacity=".6" VerticalOptions="End" HorizontalOptions="EndAndExpand">
                <Label HorizontalTextAlignment="Center" Text="{Binding Title}" TextColor="Black"/>
                <Label HorizontalTextAlignment="Center" Text="{Binding SubTitle}" TextColor="Black"/>
            </StackLayout>
        </Grid>
  </ContentView.Content>
</ContentView>